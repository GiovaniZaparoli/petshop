<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <%= form_for @service do |f| %>

        <div class="form-group">
          <label>Nome do Serviço</label>
          <%= f.text_field :name, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <label>Descrição</label>
          <%= f.text_area :description, class: 'form-control', rows: 4, required: true %>
        </div>

        <div class="form-group col-md-1 p-0">
          <label for="">Preço</label>
          <%= f.number_field :price, step: 0.01, class: 'form-control', required: true %>
        </div>

        <div class="form-group col-md-4 p-0">
          <label for="">Imagem</label>
          <%= f.file_field :imagem, class: 'form-control', required: true %>
        </div>

        <%= f.submit acao, class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>