<%= render "backoffice/header" %>
<div class="container mt-4">
  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Área de controle de usuários</h1>
    </div>
  </div>
  <table class="table table-striped table-dark text-center">
    <thead>
    <tr>
      <th class="text-center">Email</th>
      <th class="text-center">Remover</th>
      <th class="text-center">Editar</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'users', collection: @users %>
    </tbody>
  </table>

  <div>
    <%= link_to 'Novo Usuário', new_user_path, class: 'btn btn-info btn-font' %>
  </div>
</div>

<%= render "backoffice/background" %>

<%= render partial: 'backoffice/footer' %>