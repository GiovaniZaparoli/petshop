<div class="container mt-3">
  <div class="row">
    <div class="offset-3 col-md-6 offset-3 d-flex justify-content-center">
      <%= form_for @user do |f| %>

        <div class="field form-group">
          <label>Email</label>
          <% if @user.email == 'admin@admin' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', disabled: true %>
          <% else %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
          <% end %>
        </div>

        <div class="field form-group">
          <label>Senha</label>
          <%= f.password_field :password, autocomplete: "Senha", class: 'form-control', required: true %>
        </div>

        <div class="field form-group">
          <label>Confirmar Senha</label>
          <%= f.password_field :password_confirmation, autocomplete: "Senha", class: 'form-control', required: true %>
        </div>

        <div>
          <%= f.submit acao , class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

