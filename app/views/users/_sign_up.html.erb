<div class="container mt-3">
  <div class="row">
    <div class="offset-3 col-md-6 offset-3 d-flex justify-content-center">
      <%= form_for @user, :url => {:action => "create"} do |f| %>

        <div class="field form-group">
          <label>Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="field form-group">
          <label>Senha</label>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "Senha", class: 'form-control' %>
        </div>

        <div class="field form-group">
          <label>Confirmar Senha</label>
          <%= f.password_field :password_confirmation, autocomplete: "Senha", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Cadastar", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

